# ------------------------------
# OpenClaw control-plane runtime
# ------------------------------
OPENCLAW_CONFIG_DIR=$HOME/.openclaw
OPENCLAW_WORKSPACE_DIR=$HOME/.openclaw/workspace
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_BIND=lan
OPENCLAW_GATEWAY_TOKEN=replace_with_64_hex_chars
OPENCLAW_IMAGE=openclaw:local
OPENCLAW_DOCKER_APT_PACKAGES=
OPENCLAW_EXTRA_MOUNTS=
OPENCLAW_HOME_VOLUME=

# Optional provider auth
OPENAI_API_KEY=

# ------------------------------
# Real Dispatch data-plane stack
# ------------------------------
DISPATCH_API_IMAGE=real-dispatch-api:local
DISPATCH_WORKER_IMAGE=real-dispatch-worker:local
DISPATCH_API_PORT=8080
DISPATCH_API_URL=http://dispatch-api:8080
DISPATCH_DATABASE_URL=postgres://dispatch:dispatch@postgres:5432/dispatch
DISPATCH_OBJECT_STORE_ENDPOINT=http://minio:9000
DISPATCH_OBJECT_STORE_BUCKET=dispatch-artifacts
DISPATCH_OBJECT_STORE_KEY=minioadmin
DISPATCH_OBJECT_STORE_SECRET=minioadmin
